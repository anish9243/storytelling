head
  meta(charset="UTF-8")
  meta(name="viewport" content="width=device-width, initial-scale=1.0")
  title StoryCraft - Interactive Storytelling Platform
  link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css")
  link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css")
  style.
    body {
      font-family: 'Arial', sans-serif;
      background: url('https://source.unsplash.com/1600x900/?nature,water') no-repeat center center fixed; /* Replace the URL with your desired background image */
      background-size: cover;
    }
    .header {
      background-color: rgba(52, 58, 64, 0.8); /* Semi-transparent background */
      color: #ffffff;
      padding: 15px 0;
      text-align: center;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      margin-bottom: 20px;
    }
    .footer {
      background-color: rgba(52, 58, 64, 0.8); /* Semi-transparent background */
      color: #ffffff;
      padding: 15px 0;
      text-align: center;
      margin-top: 20px;
      box-shadow: 0 -4px 8px rgba(0, 0, 0, 0.1);
    }
    .story-input, .story-display {
      margin-bottom: 20px;
      padding: 20px;
      border: 1px solid #ddd;
      border-radius: 5px;
      background-color: rgba(255, 255, 255, 0.9); /* Semi-transparent background */
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .story-input {
      background-color: rgba(255, 235, 204, 0.9); /* Light orange with transparency */
    }
    .story-display {
      background-color: rgba(230, 247, 255, 0.9); /* Light blue with transparency */
    }
    .audio-player, .related-books {
      margin-top: 20px;
    }
    .btn-primary {
      background-color: #ff6600; /* Bright orange */
      border-color: #ff6600;
    }
    .btn-primary:hover {
      background-color: #cc5200; /* Darker orange */
      border-color: #cc5200;
    }
    h1, h2, h3 {
      color: #ff6600; /* Bright orange */
    }
    .list-group-item {
      background-color: rgba(255, 242, 230, 0.9); /* Very light orange with transparency */
      border-color: #ff6600; /* Bright orange */
    }
